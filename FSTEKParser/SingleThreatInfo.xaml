<Window x:Class="FSTEKParser.SingleThreatInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSTEKParser"
        mc:Ignorable="d"
        Title="SingleThreatInfo" Height="auto" Width="800" SizeToContent="Height">
    <Grid>
        <TextBox x:Name="SingleThreatInfoTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Margin="5,0,5,5" IsReadOnly="True"/>
    </Grid>
</Window>
